<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonRetour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="#35C3B2"
            app:tint="#FFFFFF"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textViewLangage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewLangage"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <ListView
            android:id="@+id/listViewLangage"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            tools:listitem="@layout/item_langage"
            android:layout_weight="1">
        </ListView>

        <TextView
            android:id="@+id/textViewProjet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewProjet"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <ListView
            android:id="@+id/listViewProjet"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_projet">
        </ListView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>